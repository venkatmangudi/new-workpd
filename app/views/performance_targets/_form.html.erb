<%= simple_form_for @performance_target, :html => { :class => 'form-horizontal' }  do |f| %>

    <%= f.input :entity, collection: [ "EMPLOYEE", "HOSPITAL"],include_blank: false%>
    <%= f.association :employee_cadre,label_method: :employee_cadre_type, value_method: :id,include_blank: true %>
    <%= f.association :hospital_type,label_method: :hospital_type, value_method: :id,include_blank: true %>

    <%= f.input :task , collection: [ "OPD", "INDOOR","PATHOLOGY TEST","MINOR SURGERY","MAJOR SURGERY","CEASARION","SONOGRAPHY","CT SCAN","MRI","DENTAL XRAY","XRAY","ECG","REFRACTION","HEMO DIALYSIS"],include_blank: false%>
    <%= f.input :minimum_daily_work %>
    <%= f.input :minimum_monthly_work %>
    <%= f.input :unit, collection:["DAILY","MONTHLY"],include_blank: false %>
    <%= f.input :remarks %>



    <div class="form-actions">
      <%= f.submit "Submit", :name => nil, :class => "btn-primary" %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  hospital_performas_path, :class => 'btn' %>
    </div>

<% end %>
